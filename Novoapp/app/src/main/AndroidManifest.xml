<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.novoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Novoapp"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".NovaSenha"
            android:exported="false" /> <!-- Atividade inicial, com filtro MAIN e LAUNCHER -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Atividade principal do app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Outras atividades do app -->
        <activity
            android:name=".Redefinir"
            android:exported="false" />
        <activity
            android:name=".CadastroActivity"
            android:exported="false" />
        <activity
            android:name=".PrincipalActivity"
            android:exported="false" />

        <activity android:name=".PostosActivity" />

        <activity android:name=".CadastrarPostoActivity" />

    </application>

</manifest>